<% provide(:title, @user.name) %>
<div class='row'>
  <aside class='col-md-4'>
    <section class='user_info'>
      <h1>
       <%= gravatar_for @user %>
       <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.movements.any? %>
        <h3>Started (<%= @user.movements.count %>) Movements</h3>
        <ol class="movements">
          <%= render @movements %>
        </ol>
        <%= will_paginate @movements %>
    <% end %>
  </div>
</div>
